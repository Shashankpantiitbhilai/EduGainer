  <main class="form-signin h-50 w-70 m-auto">
    <div class="card">
      <div class="card-body ">
  <form action="/class-reg" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>

    <div class="form-group">
      <label for="gender">Gender:</label>
      <select id="gender" name="gender" required>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
      </select>
    </div>
    <div class="form-group">
        <label for="class">Class:</label>
        <input type="text" id="class" name="class" required readonly>
         
     
      </div>
      <div class="form-group">
        <label for="board">Board:</label>
        <input type="text" id="board" name="board" required readonly>
      </div>

      <div class="form-group">
        <label for="subject">Subject:</label>
        <select id="subject" name="subject" required>
          <option value="Physics">Physics</option>
          <option value="Chemistry">Chemistry</option>
          <option value="Maths">Maths</option>
          <option value="Economics">Economics</option>
          <option value="Science">Science</option>
          <option value="Biology">Biology</option>
          <option value="Other">Other</option>
        </select>
      </div>
  <div class="form-group">
        <label for="faculty">Faculty:</label>
        <input type="text" id="faculty" name="faculty" required readonly>
      </div>
      <div class="form-group">
        <label for="school">School:</label>
        <input type="text" id="school" name="school" required>
        
     
      </div>
    <div class="form-group">
      <label for="dob">Date of Birth:</label>
      <input type="date" id="dob" name="dob" max="2007-12-31" required>
    </div>

    <div class="form-group">
      <label for="fatherName">Father's Name:</label>
      <input type="text" id="fatherName" name="fatherName" required>
    </div>

    <div class="form-group">
      <label for="motherName">Mother's Name:</label>
      <input type="text" id="motherName" name="motherName" required>
    </div>

    <div class="form-group">
      <label for="contactNo1">Contact No. 1 (Whatsapp):</label>
      <input type="tel" id="contactNo1" name="contactNo1" maxlength="10" pattern="\d{10}"placeholder="Enter ten digits" required>
    </div>

    <div class="form-group">
      <label for="contactNo2">Contact No. 2:</label>
      <input type="tel" id="contactNo2" name="contactNo2" maxlength="10" pattern="\d{10}" placeholder="Enter ten digits" >
    </div>

    <div class="form-group">
      <label for="address">Address:</label>
      <input type="text" id="address" name="address" required>
    </div>

    <div class="form-group">
      <label for="aadharNo">Aadhar No.:</label>
      <input type="text" id="aadharNo" name="aadharNo"minlength="12" maxlength="12" placeholder="Enter twelve digits" required>
    </div>
    <div class="form-group">
      <label for="adharCardPhoto">Adhar Card Photo:</label>
      <div class="custom-file">
        <input type="file" class="selector" id="adharCardPhoto" name="adharCardPhoto" accept="image/*" required>
     
      </div>
    </div>

    <div class="form-group">
      <label for="prepareForExam">Prepare for Exam:</label>
      <input type="text"  id="prepareForExam" name="prepareForExam" required>
    </div>

   
        
     
    </div>


    <div class="form-group">
      <label for="photo">Profile Photo:</label>
      <input type="file" id="photo" name="photo"class="selector" accept="image/*" required>
    </div>

    
       
      
    </div>


  
    <button type="submit" value="Submit"class="btn btn-success">Submit</button>
  </form>

</div></div></main>
<script>
  
    document.addEventListener('DOMContentLoaded', function() {
      // Retrieve class and board information from LocalStorage
      var className = localStorage.getItem('class');
      var boardName = localStorage.getItem('board');
      var facultyName = localStorage.getItem('faculty');
  
      // Populate the class and board fields with the retrieved information
      var classField = document.getElementById('class');
      var boardField = document.getElementById('board');
      var facultyField = document.getElementById('faculty');
      if (classField && boardField && facultyField) {
        classField.value = className;
        boardField.value = boardName;
        facultyField.value=facultyName;
      }
    });
 
  
 
  document.getElementById('aadharNo').addEventListener('input', function () {
    var aadharNo = this.value.trim();
    if (aadharNo.length === 12) {
      var isValid = validateAadharNumber(aadharNo);
      if (!isValid) {
        this.setCustomValidity('Invalid Aadhar number');
      } else {
        this.setCustomValidity('');
      }
    } else {
      this.setCustomValidity('Aadhar number must be 12 digits');
    }
  });

  function validateAadharNumber(aadharNo) {
    // Implement your server-side validation or Aadhar number validation algorithm here
    // Example implementation using regex pattern: /^(\d{4}\s?){2}\d{4}$/
    // Return true if the Aadhar number is valid; otherwise, return false
    return /^(\d{4}\s?){2}\d{4}$/.test(aadharNo);
  }
</script>
