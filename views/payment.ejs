      <img src="css/qrcode.jpg" height="250px" align="center">
     
       
      
    </div>

    <div class="form-group">
      <label for="paymentPhoto">Upload Payment Screenshot:</label>
      <input type="file" id="paymentPhoto" class="selector"name="paymentPhoto" accept="image/*" required>
    </div>

    <button type="submit" value="Submit"class="btn btn-success">Submit</button>
  </form>

</div></div></main>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Fetch the batch value from the server-side (replace 'YOUR_BATCH_VALUE' with the actual batch value)
    var shiftValue = "<%= shift %>"; // Replace 'YOUR_BATCH_VALUE' with the actual batch value coming from the server-side

    // Get the amount input field
    var amountField = document.getElementById('amount');

    // Function to calculate the amount based on the batch value
    function calculateAmount(shiftValue) {
      switch (shiftValue) {
        case '7 AM to 2 PM':
          return 500;
          case '2 PM to 9 PM':
          return 500;
          case '2 PM to 11 PM':
          return 700;
          case '7 AM to 7 PM':
          return 800;
          case '7 PM to 11 PM':
          return 300;
          case '9 PM to 6 AM':
          return 500;
        default:
          return 1000; // Handle the case when batch value is unknown or not specified
      }
    }

    // Calculate and set the amount based on the batch value
    var calculatedAmount = calculateAmount(shiftValue);
    amountField.value = calculatedAmount;
    amountField.readOnly = true; // Make the amount field readonly
  });

  document.getElementById('shift').addEventListener('change', function () {
    var selectedShift = this.value;
    var amountField = document.getElementById('amount');
    if (selectedShift === "7 AM to 2 PM") {
      amountField.value = '500';
      amountField.readOnly = true;
    } 
  
   else if (selectedShift === '2 PM to 9 PM') {
      amountField.value = '500';
      amountField.readOnly = true;
    }
    else if (selectedShift === '7 PM to 11 PM') {
      amountField.value = '300';
      amountField.readOnly = true;
    }
    else if (selectedShift === '9 PM to 6 AM') {
      amountField.value = '500';
      amountField.readOnly = true;
    }
    else if (selectedShift === '2 PM to 11 PM') {
      amountField.value = '700';
      amountField.readOnly = true;
    }
    else  if (selectedShift === '7 AM to 7 PM') {
      amountField.value = '800';
      amountField.readOnly = true;
    }
    else  if (selectedShift === '24*7') {
      amountField.value = '1000';
      amountField.readOnly = true;
    }
    }
  );
  document.getElementById('aadharNo').addEventListener('input', function () {
    var aadharNo = this.value.trim();
    if (aadharNo.length === 12) {
      var isValid = validateAadharNumber(aadharNo);
      if (!isValid) {
        this.setCustomValidity('Invalid Aadhar number');
      } else {
        this.setCustomValidity('');
      }
    } else {
      this.setCustomValidity('Aadhar number must be 12 digits');
    }
  });

  function validateAadharNumber(aadharNo) {
    // Implement your server-side validation or Aadhar number validation algorithm here
    // Example implementation using regex pattern: /^(\d{4}\s?){2}\d{4}$/
    // Return true if the Aadhar number is valid; otherwise, return false
    return /^(\d{4}\s?){2}\d{4}$/.test(aadharNo);
  }
</script>

