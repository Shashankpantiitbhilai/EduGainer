      <label for="shift">Shift:</label>
      <input type="text" id="shift" name="shift" value="<%= shift %>" required>
       
        
      
    </div>
    <div class="form-group">
      <label for="seat">Seat:</label>
      <input type="text" id="seat" name="seat"  required>
       
        
      
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
