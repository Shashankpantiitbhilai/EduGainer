      <div class="custom-file">
        <input type="file" class="selector" id="adharCardPhoto" name="adharCardPhoto" accept="image/*" required>
     
      </div>
    </div>

    <div class="form-group">
      <label for="prepareForExam">Prepare for Exam:</label>
      <input type="text"  id="prepareForExam" name="prepareForExam" required>
    </div>

    <div class="form-group">
      <label for="shift">Shift:</label>
     <input type="text" class="form-control" id="shift" name="shift" readonly>
        
     
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="text" class="form-control" id="date" name="date" value= "<%= currentDate %>"required readonly>
        
    </div>

    <div class="form-group">
      <label for="amount">Amount:</label>
      <input type="number"id="amount" name="amount" class="form-control" required readonly >
        
    
    </div>

    <div class="form-group">
      <label for="photo">Profile Photo:</label>
      <input type="file" id="photo" name="photo"class="selector" accept="image/*" required>
    </div>

    <div class="form-group">
      <label for="paymentMethod">Payment Method:</label>
      <select id="paymentMethod" name="paymentMethod" required>
